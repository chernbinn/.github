name: Deploy .github/site to GitHub Pages

on:
  push:
    branches: ["main"]

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: "pages"
  cancel-in-progress: false

jobs:
  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    steps:
      - name: Checkout ğŸ“¥
        uses: actions/checkout@v4

      - name: Show .github/site content ğŸ“‚
        run: |
          ls -R .github/site/

      - name: Copy .github/site to artifact dir ğŸ“¤
        run: |
          mkdir -p ./dist
          cp -r .github/site/* ./dist/
          cp -r .github/site/.* ./dist/ 2>/dev/null || true  # å¤åˆ¶éšè—æ–‡ä»¶ï¼ˆå¦‚ .nojekyllï¼‰

      - name: Setup Pages ğŸ”§
        uses: actions/configure-pages@v5

      - name: Upload Artifact ğŸ“¦
        uses: actions/upload-pages-artifact@v3
        with:
          path: ./dist

      - name: Deploy to GitHub Pages ğŸš€
        id: deployment
        uses: actions/deploy-pages@v4
        